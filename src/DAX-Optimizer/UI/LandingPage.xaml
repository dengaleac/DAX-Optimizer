<Window x:Class="DAX_Optimizer.UI.LandingPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DAX_Optimizer.UI"
        xmlns:core="clr-namespace:DAX_Optimizer.Core"
        xmlns:utils="clr-namespace:DAX_Optimizer.Utilities"
        mc:Ignorable="d"
        Title="Power BI Metadata Explorer" 
        Height="800" Width="1500"
        WindowStartupLocation="CenterScreen"
        Icon="/Resources/Icons/DaxOptimizer_32.ico"
        >
    <Window.Resources>
        <!-- Template Selector -->
        <core:MetadataItemTemplateSelector x:Key="MetadataItemTemplateSelector">
            <core:MetadataItemTemplateSelector.TableTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="{Binding Margin}">
                        <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" Foreground="#2E75B6"/>
                    </StackPanel>
                </DataTemplate>
            </core:MetadataItemTemplateSelector.TableTemplate>

            <core:MetadataItemTemplateSelector.ColumnTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="{Binding Margin}">
                        <TextBlock Text="{Binding DisplayName}" Foreground="#6B6B6B"/>
                    </StackPanel>
                </DataTemplate>
            </core:MetadataItemTemplateSelector.ColumnTemplate>

            <core:MetadataItemTemplateSelector.MeasureTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="{Binding Margin}">
                        <TextBlock Text="{Binding DisplayName}" Foreground="#D83B01"/>
                    </StackPanel>
                </DataTemplate>
            </core:MetadataItemTemplateSelector.MeasureTemplate>
        </core:MetadataItemTemplateSelector>

        <!-- Styles -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="3"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PropertyLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#323130"/>
            <Setter Property="Margin" Value="0,5,10,5"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

        <Style x:Key="PropertyValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#605E5C"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

        <utils:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <utils:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#F3F2F1" BorderBrush="#E1DFDD" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Margin="10,5" 
                            HorizontalAlignment="Center" Grid.Column="1">

                    <TextBlock Text="Power BI Semantic Model Analysis Tool" 
                           VerticalAlignment="Center" 
                           Margin="20,0,0,0" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#323130"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                    
                    <Button Name="ExportDocumentButton" 
        Content="Export Document" 
        Click="ExportDocumentButton_Click"        
        Style="{StaticResource ModernButton}"
        Cursor="Hand" />
                    
                </StackPanel>
            </Grid>
        </Border>
        <Border Grid.Row="1">
            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center" >
                <TextBlock Text="Power BI connections :" VerticalAlignment="Center" Margin="10,0,10,0"></TextBlock>
                <ComboBox Name="cmbInstances" Grid.Column="0" Margin="2" 
                       SelectionChanged="cmbInstances_SelectionChanged" Width="500" VerticalContentAlignment="Center"
                       DisplayMemberPath="." Height="25" />

                <Button Name="btnRefreshInstances" Grid.Column="1" Content="Refresh" Style="{StaticResource ModernButton}"
Click="btnRefreshInstances_Click" ToolTip="Refresh metadata from Power BI" Cursor="Hand"/>

                <Button Name="btnConnect" Grid.Column="1" Content="Connect" Style="{StaticResource ModernButton}" 
Click="ConnectButton_Click" ToolTip="Refresh metadata from Power BI" Cursor="Hand"/>
                <StackPanel Grid.ColumnSpan="4" Orientation="Horizontal" Margin="2">

                    <ProgressBar Name="progressBar" Width="200" Height="15" Margin="2" 
Visibility="Hidden" IsIndeterminate="True"/>
                </StackPanel>
                <ComboBox Name="cmbDatabases" Grid.Row="0" Grid.Column="1" Margin="2" Height="25" Width="300"  VerticalContentAlignment="Center"  Visibility="Hidden"/>
                
            </StackPanel>

        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="117*"/>
                <ColumnDefinition Width="21*"/>
                <ColumnDefinition Width="227*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Model Explorer -->
            <Border Grid.Column="0" Background="White" BorderBrush="#E1DFDD" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#F8F8F8" BorderBrush="#E1DFDD" BorderThickness="0,0,0,1">
                        <TextBlock Text="Model Explorer" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Margin="15,10"
                                   Foreground="#323130"/>
                    </Border>

                    <!-- Tree View -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <ListBox Name="MetadataListBox" 
                                 ItemsSource="{Binding MetadataItems}"
                                 SelectedItem="{Binding SelectedItem}"
                                 ItemTemplateSelector="{StaticResource MetadataItemTemplateSelector}"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="8,4"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="Border" 
                                                        Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#F3F2F1"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#E1DFDD"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                          Width="5" 
                          HorizontalAlignment="Stretch" 
                          Background="#E1DFDD"/>

            <!-- Right Panel - Properties and DAX -->
            <Grid Grid.Column="2" Grid.ColumnSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Properties Header -->
                <Border Grid.Row="0" Background="#F8F8F8" BorderBrush="#E1DFDD" BorderThickness="0,0,0,1">
                    <TextBlock Text="Properties" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Margin="15,10"
                               Foreground="#323130"/>
                </Border>

                <!-- Properties Panel -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="White">
                    <StackPanel Margin="15">
                        <ItemsControl ItemsSource="{Binding ItemProperties}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding Key}" 
                                                   Style="{StaticResource PropertyLabel}"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Value}" 
                                                   Style="{StaticResource PropertyValue}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Show message when no item is selected -->
                        <TextBlock Text="Select a table, column, or measure to view its properties."
                                   Foreground="#605E5C"
                                   FontStyle="Italic"
                                   Visibility="{Binding SelectedItem, Converter={StaticResource NullToVisibilityConverter}}"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Splitter -->
                <GridSplitter Grid.Row="2" 
                              Height="5" 
                              HorizontalAlignment="Stretch" 
                              Background="#E1DFDD"/>

                <!-- DAX Expression Panel -->
                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- DAX Header -->
                    <Border Grid.Row="0" Background="#F8F8F8" BorderBrush="#E1DFDD" BorderThickness="0,1,0,1">
                        <TextBlock Text="Expression Analyzer" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Margin="15,10"
                                   Foreground="#323130"/>
                    </Border>

                    <!-- DAX Expression TextBox -->
                    <Border Grid.Row="1" Background="White">
                        <Grid Margin="10,5,0,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>

                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="420"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="Expression" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"
                                       Foreground="#323130"/>

                            <ScrollViewer Grid.Row="1" Grid.Column="0" 
                                          VerticalScrollBarVisibility="Auto" 
                                          HorizontalScrollBarVisibility="Auto"
                                          Background="#F8F8F8"
                                          BorderBrush="#E1DFDD"
                                          BorderThickness="1" 
                                          Margin="0,0,0,0" 
                                          Width="400">
                                <TextBox Text="{Binding DaxExpression, Mode=OneWay}"
                                         x:Name="txtExpression" 
                                         IsReadOnly="True"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Margin="10"
                                         FontFamily="Consolas"
                                         FontSize="12"
                                         MaxWidth="400"
                                         TextWrapping="Wrap"                                         
                                         VerticalScrollBarVisibility="Auto"
                                         HorizontalScrollBarVisibility="Auto"/>

                            </ScrollViewer >
                            <StackPanel Orientation="Vertical"    
                                        Grid.Row="1" 
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">

                                <StackPanel Orientation="Vertical" Margin="0" VerticalAlignment="Bottom" Width="180">
                                    <Label Content="Provider:" Width="120"/>
                                    <ComboBox Name="cbAIProvider" Width="150" SelectionChanged="OnProviderChanged" Height="25">
                                        <ComboBoxItem Content="Ollama-llama3.2" IsSelected="True" VerticalAlignment="Center" />
                                        <ComboBoxItem Content="Ollama-phi4" VerticalAlignment="Center"/>
                                        <ComboBoxItem Content="Ollama-gemma3:1b" VerticalAlignment="Center"/>
                                        <ComboBoxItem Content="Ollama-gemma3:4b" VerticalAlignment="Center"/>
                                        <ComboBoxItem Content="Ollama-gpt-oss:20b" VerticalAlignment="Center"/>
                                        <ComboBoxItem Content="OpenAI-gpt-5-mini" VerticalAlignment="Center"/>                                        
                                        <ComboBoxItem Content="OpenAI-gpt-5-nano" VerticalAlignment="Center"/>
                                        <ComboBoxItem Content="OpenAI-gpt-4.1" VerticalAlignment="Center"/>
                                        <ComboBoxItem Content="OpenAI-gpt-4.1-mini" VerticalAlignment="Center"/>
                                        <ComboBoxItem Content="OpenAI-o4-mini" VerticalAlignment="Center"/>                                        
                                    </ComboBox>
                                    <ProgressBar Name="LoadingIndicator" 
                                                 Width="100" Height="20" Margin="20,5,0,0"
                                                 Visibility="Collapsed" IsIndeterminate="True"/>

                                </StackPanel>

                                <Button Name="btnExplainDAX" 
                                         Content="Explain Expression" 
                                         Style="{StaticResource ModernButton}"
                                         Click="btnExplainDAX_Click" 
                                        Margin="10,30,10,0" Cursor="Hand"
                                         ToolTip="Click 'Explain Expression' to get a detailed AI-powered analysis of your DAX formula, including function descriptions, context evaluation, and optimization suggestions."/>

                                <Button Name="btnOptimizeDAX" 
                                     Content="Optimize Expression" 
                                     Style="{StaticResource ModernButton}"
                                     Click="btnOptimizeDAX_Click" 
                                        Margin="10,30,10,0" Cursor="Hand"
                                     ToolTip="Click 'Explain Expression' to get a detailed AI-powered analysis of your DAX formula, including function descriptions, context evaluation, and optimization suggestions."/>
                                
                            </StackPanel>

                            <Label x:Name="StatusLabel" Grid.Row="0" Grid.Column="3" Visibility="Hidden"/>
                            <Border  Grid.Row="1" Grid.Column="3" Background="#F8F8F8" BorderBrush="#E1DFDD" BorderThickness="0,0,0,1">
                            <ScrollViewer
                                   VerticalScrollBarVisibility="Auto" 
                                   HorizontalScrollBarVisibility="Auto"
                                   Background="Transparent"
                                   BorderBrush="#E1DFDD"
                                   BorderThickness="1" Margin="0,0,0,0"                                           
                                   >
                                <WebBrowser Name="markdownViewer" Margin="1,1,5,1" LoadCompleted="markdownViewer_LoadCompleted"></WebBrowser>

                            </ScrollViewer>
                            </Border>

                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
